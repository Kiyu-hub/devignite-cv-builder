# ============================================
# ADMIN CREDENTIALS (CHANGE THESE BEFORE DEPLOYMENT!)
# ============================================
# The system will automatically create an admin user on startup with these credentials
# LOGIN URL: /admin/login (after deployment)
# Default credentials below - MUST be changed for production!
ADMIN_EMAIL=admin@devignite.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# Clerk Authentication
# ============================================
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Database (PostgreSQL)
# Use this for Render PostgreSQL (RECOMMENDED for deployment)
DATABASE_URL=postgresql://<render_user>:<render_password>@<render_host>:5432/<render_db_name>?sslmode=require

# Use this for Neon PostgreSQL (if needed for local or test use)
 DATABASE_URL=postgresql://<neon_user>:<neon_password>@<neon_host>/<neon_db_name>

# DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=your-db-host
PGPORT=5432
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name

# Paystack Payment Gateway (Ghana)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Groq AI
GROQ_API_KEY=gsk_your_groq_api_key

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Cloudinary File Storage
# ============================================
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Application URL (for external deployments)
# Examples: https://your-app.onrender.com, https://your-app.railway.app, https://your-app.netlify.app
APP_URL=https://your-deployment-url.com

# Deployment
NODE_ENV=production

# ==========================================
# PHASE 1: ENHANCED CONFIGURATION
# ==========================================

# Session & Security
SESSION_SECRET=your_super_secret_session_key_min_32_chars_random
ENCRYPTION_KEY=your_encryption_key_for_api_keys_32_chars_random

# Rate Limiting & Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:5000,https://devignitecv.netlify.app

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_USAGE_TRACKING=true

# Monitoring & Logging
LOG_LEVEL=info # debug, info, warn, error
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Error Tracking (Optional - Sentry)
SENTRY_DSN= # Add your Sentry DSN for production error tracking
SENTRY_ENVIRONMENT=production # development, staging, production
SENTRY_TRACE_SAMPLE_RATE=0.1 # 10% of transactions

# Backup Configuration
ENABLE_AUTO_BACKUP=false # Set to true for production
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups # Local or cloud storage path

# Performance & Limits
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT_MS=30000 # 30 seconds
MAX_CONCURRENT_REQUESTS=100

# Development Tools (Only enable in development)
ENABLE_DEV_TOOLS=false # Set to true only in development
DRIZZLE_STUDIO_PORT=4983

# CI/CD Integration
CI_MODE=false # Set to true in CI/CD pipelines
SKIP_ENV_VALIDATION=false # Only for CI/CD testing

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=10000
DB_CONNECTION_TIMEOUT_MS=10000

# API Versioning
API_VERSION=v1
ENABLE_API_VERSIONING=true

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# Cache Configuration (Optional - Redis)
REDIS_URL= # Optional: Redis for caching and session storage
CACHE_TTL_SECONDS=3600 # 1 hour default cache TTL
ENABLE_CACHING=false

# Storage Quotas
MAX_CV_STORAGE_PER_USER_MB=100
MAX_FILE_UPLOAD_SIZE_MB=5
MAX_TOTAL_STORAGE_GB=1000
